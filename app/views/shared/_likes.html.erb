<% if current_user.likes?(@tweet) %>
  <%= link_to fa_icon('thumbs-down'), tweet_likes_path(@tweet), method: :delete, class: 'btn btn-secondary' %>
<% else %>
  <%= link_to fa_icon('thumbs-up'), tweet_likes_path(@tweet), method: :post, class: 'btn btn-secondary' %>
<% end %>

<%= pluralize(@tweet.likes.count, 'Like') %>
<br>

Liked by:
<% @tweet.likes.each do |like| %>
  <br>
  <%= like.user.username %>
  <br>
<% end %>
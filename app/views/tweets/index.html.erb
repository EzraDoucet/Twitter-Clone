
<div class="container text-center">
    <div class="row">
      <div class="col">
        <h1 class="text-center">All The Tweets In The Universe</h1>


        <%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-success btn-lg' %>
        <br><br>
        <table class='table table-striped table-hover'>
          <thead class='thead-dark'>
            <tr>
              <th>Tweet</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @tweets.each do |tweet| %>
              <tr>
                <td><%= sanitize(tweet.message) %></td>
                <td><%= tweet.user.try(:username) %></td>
                <td><%= link_to fa_icon('eye'), tweet %></td>
                <td><%= link_to fa_icon('pencil'), edit_tweet_path(tweet) %></td>
                <td><%= link_to fa_icon('trash-o'), tweet, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
            <% end %>

          </tbody>
        </table>


      </div>
    </div>
</div>